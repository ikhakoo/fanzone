<h1>Comments</h1>

<ul id="comments">
  <% @comments.each do |comment| %>
    <li><%= comment.content %></li>
  <% end %>
</ul>

<h2>New Comment</h2>
<% form_for [@commentable, Comment.new] do |f| %>
  <ol class="formList">
    <li>
      <%= f.label :content %>
      <%= f.text_area :content, :rows => 2 %>
    </li>
    <li><%= submit_tag "Add comment" %></li>
  </ol>
<% end %>