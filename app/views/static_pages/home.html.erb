<div class="row">
	<% if signed_in? %>
	<% provide(:title, 'Home') %>
		<aside class="col-md-4">
		<section>
			
			<%= render 'shared/user_info' %>

		</section>
		</aside>
		<div class="col-md-8">
		<div class="timeline">
		<h2 class="title">Social Feed</h2>
			<%= render 'shared/feed' %>

			</div>
		</div>
	<% else %>
	<% provide(:title, 'Welcome') %>
	<div class="col-md-12 one-col">
		<h1>
			Welcome to FAN Zone
		</h1>
		<p>
			Start a conversation, watch some highlights, make some new friends.
		</p>
			<%= link_to 'Sign up', signup_path, class: "btn btn-primary" %>
			<%= link_to 'Sign in', signin_path, class: "btn btn-default" %>
			<%= link_to 'Sign In With Google', '/auth/google_oauth2', class: "btn btn-default" %>
		</div>
	<% end %>
</div>